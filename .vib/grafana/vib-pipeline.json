{
    "phases": {
      "package": {
        "context": {
          "resources": {
            "url": "{SHA_ARCHIVE}",
            "path": "/bitnami/grafana"
          }
        },
        "actions": [
          {
            "action_id": "helm-package"
          },
          {
            "action_id": "helm-lint"
          }
        ]
      },
      "verify": {
        "context": {
          "runtime_parameters": ""
        },
        "actions": [
          {
            "action_id": "trivy",
            "params": {
              "threshold": "CRITICAL",
              "vuln_type": ["OS"]
            }
          }
        ]
      }
    }
  }
  