{
    "phases": {
      "package": {
        "context": {
          "resources": {
            "url": "{SHA_ARCHIVE}",
            "path": "/bitnami/thanos"
          }
        },
        "actions": [
          {
            "action_id": "helm-package"
          }
        ]
      },
      "verify": {
        "context": {
          "resources": {
            "url": "{SHA_ARCHIVE}",
            "path": "/bitnami/thanos"
          },
          "runtime_parameters": "",
          "target_platform": {
            "target_platform_id": "{TARGET_PLATFORM}",
            "size": {
              "name": "M4"
            }
          }
        },
        "actions": [
          {
            "action_id": "health-check",
            "params": {
              "endpoint": "lb-thanos-http",
              "app_protocol": "HTTP"
            }
          },
          {
            "action_id": "goss",
            "params": {
              "resources": {
                "path": "/.vib/thanos/goss"
              },
              "remote": {
                "workload": "deploy-thanos"
               }
            }
          },
          {
            "action_id": "cypress",
            "params": {
              "resources": {
                "path": "/.vib/thanos/cypress"
              },
              "endpoint": "lb-thanos-http",
              "app_protocol": "HTTP"
            }
          }
        ]
      }
    }
  }
  
